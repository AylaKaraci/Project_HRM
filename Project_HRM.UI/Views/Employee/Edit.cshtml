@model Project_HRM.Common.VModels.EmployeeVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<form class="form-horizontal" asp-controller="Employee" asp-action="Edit" enctype="multipart/form-data"
      style="margin-top:15px;">
    @Html.HiddenFor(x => Model.Id)
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Id">Çalışan ID</label>

        <div class="col-sm-7">
            <input asp-for="Id" type="text" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="Id"></span>
        </div>
    </div>


    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="FirstName">Ad</label>

        <div class="col-sm-7">
            <input asp-for="FirstName" type="text" id="form-field-1" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="LastName">Soyad</label>

        <div class="col-sm-7">
            <input asp-for="LastName" type="text" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="LastName"></span>

        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="TcNo">TcNo</label>

        <div class="col-sm-7">
            <input asp-for="TcNo" type="text" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="TcNo"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="DateOfBirth">Doğum Tarihi</label>

        <div class="col-sm-3">
            <input class="form-control date-picker col-xs-10 col-sm-5" asp-for="DateOfBirth" type="text" data-date-format="dd-mm-yyyy" />
            <span asp-validation-for="DateOfBirth"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="PhoneNumber">CepNo</label>

        <div class="col-sm-7">
            <input asp-for="PhoneNumber" type="text" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Email">Email</label>

        <div class="col-sm-7">
            <input asp-for="Email" type="text" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="MaritalStatus">Medeni Durum</label>

        <div class="col-sm-7">
            <input asp-for="MaritalStatus" type="text" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="MaritalStatus"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="DateOfWork">İşe Başlama Tarihi</label>

        <div class="col-sm-3">
            <input class="form-control date-picker col-xs-10 col-sm-5" asp-for="DateOfWork" type="text" data-date-format="dd-mm-yyyy" />
            <span asp-validation-for="DateOfWork"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Address">Adres</label>
        <div class="col-sm-3">
            <textarea class="form-control limited" asp-for="Address" maxlength="250"></textarea>
            <span asp-validation-for="Address"></span>
        </div>
    </div>
    @*<div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">Önİzleme:</label>

            <div class="col-sm-4">
                <img class="card-img-top" style="width:100px;height:100px;" src="@imagePath" asp-append-version="true" />
            </div>
        </div>*@

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="PhotoPath">Fotoğraf</label>
        <div class="col-sm-7 custom-file">
            <div class="col-sm-5">
                <input asp-for="PhotoPath" class="col-xs-10 col-sm-5 custom-file-input form-control" id="form-field-1" />
                <span asp-validation-for="PhotoPath"></span>
            </div>
        </div>
    </div>
    @*<div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" asp-for="Document">Document</label>
            <div class="col-sm-9 custom-file">
                <div class="col-sm-5">
                    <input asp-for="Document" class="col-xs-10 col-sm-5 custom-file-input form-control" id="form-field-1" placeholder="Belge Seçiniz" />
                    <span asp-validation-for="Document"></span>
                </div>
            </div>
        </div>*@


    <custom-list></custom-list>
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Edit" class="btn btn-info col-xs-3" />
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/jquery.inputlimiter.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.date-picker').datepicker({
                autoclose: true,
                todayHighlight: true
            });

            $('textarea.limited').inputlimiter({
                remText: '%n karakter %s kaldı...',
                limitText: 'Maksimumum limit: %n.'
            });
        });
    </script>
}

